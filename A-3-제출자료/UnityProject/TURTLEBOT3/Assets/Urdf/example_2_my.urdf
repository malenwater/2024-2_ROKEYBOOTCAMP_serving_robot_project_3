<?xml version="1.0" ?>                               
<robot name="simple_robot">                               
   <link name="link1">
       <visual>
           <geometry>
               <box size="1 1 0.2"/>
           </geometry>
           <material name="green">
  		     <color rgba="0 1 0 1"/>
           </material>
       </visual>
   </link>
   <joint name="joint1" type="revolute"> 
        <parent link="link1"/>
        <child link="link2"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
        <limit lower="-1.57" upper="1.57" effort="5" velocity="2"/>
   </joint>
   <link name="link2">
      <visual> 
          <geometry> 
             <cylinder length="1" radius="0.1"/>
         </geometry>
        <material name="blue">
            <color rgba="0 0 1 1"/>
        </material>
      </visual>
   <joint name="joint2" type="revolute"> 
        <parent link="link2"/>
        <child link="link3"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
        <limit lower="-1.57" upper="1.57" effort="5" velocity="2"/>
   </joint>
   <link name="link3">
      <visual> 
          <geometry> 
             <sphere radius="0.1"/>
         </geometry>
        <material name="blue">
            <color rgba="1 0 0 1"/>
        </material>
      </visual>
    </link>
</robot>
